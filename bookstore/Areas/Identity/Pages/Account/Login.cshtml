@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
.fw-normal{
            font-family:'Courier New';
            font-weight: bold;
        }
</style>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-right h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" style="width: 23rem;">
                        <h3 class="fw-normal" style="color: #174ea6; font-size:25px; font-weight:bolder" >Log in</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Email" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="pt-1 mb-4">
                            <button id="explore" class="button-17" role="button" type="submit" style="color: #0e2e63;">Log In</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" asp-page="./ForgotPassword">Forgot password?</a></p>
                        <p>Don't have an account? <a asp-page="./Register" class="link-info" style="color: #0e2e63;">Register here</a></p>
                        

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/img/register.png"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
