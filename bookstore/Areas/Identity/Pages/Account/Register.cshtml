@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .fw-normal {
        font-family: 'Courier New';
        font-weight: bold;
    }

    .container-fluid {
        padding-right: 0;
    }

    .h-custom-2 {
        height: calc(100% - 50px); /* Adjust this value as needed */
    }

    .col-sm-6.text-black {
        padding-left: 0;
        padding-right: 0;
    }

    .form-container {
        margin: 0;
        padding: 2rem;
    }
</style>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center h-custom-2 form-container">

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width: 23rem;">
                        <h3 class="fw-normal" style="color: #174ea6; font-size:25px; font-weight:bolder">Register</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Name" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Input.Name">Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Surname" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Input.Surname">Surname</label>
                            <span asp-validation-for="Input.Surname" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="form-label" for="form2Example18">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label class="form-label" for="form2Example28">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label class="form-label" for="form2Example38">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button id="registerSubmit" type="submit" class="button-17" role="button" style="color: #0e2e63;">Register</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" asp-page="./ForgotPassword">Forgot password?</a></p>
                        <p>Already have an account? <a asp-page="./Login" class="link-info" style="color: #0e2e63;">Log in here</a></p>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/img/tree.png" alt="Register image" class="w-100 vh-100" style="object-fit: cover; object-position: right;">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
